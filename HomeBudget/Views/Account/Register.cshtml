@model HomeBudget.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Utwórz konto";
}

<h2>Utwórz konto</h2>
<hr />

<form asp-controller="Account" asp-action="Register" method="post">
    <div class="form-group row">
        <label asp-for="UserName" class="col-md-3 col-md-text-right col-form-label"></label>
        <div class="col-md-4">
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="form-error-message"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-md-3 col-md-text-right col-form-label"></label>
        <div class="col-md-4">
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="form-error-message"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-md-3 col-md-text-right col-form-label"></label>
        <div class="col-md-4">
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="form-error-message"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-md-3 col-md-text-right col-form-label"></label>
        <div class="col-md-4">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="form-error-message"></span>
        </div>
    </div>
    <div class="form-group row">
        <span class="col-md-3"></span>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Utwórz konto</button>
        </div>
    </div>
</form>