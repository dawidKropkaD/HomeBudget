@model  HomeBudget.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<h2>Zaloguj się</h2>
<hr />

<div asp-validation-summary="ModelOnly" class="form-error-message"></div>

<form asp-controller="Account" asp-action="LoginAsync" method="post">
    <div class="form-group row">
        <label asp-for="Login" class="col-md-3 col-md-text-right col-form-label"></label>
        <div class="col-md-4">
            <input asp-for="Login" class="form-control">
            <span asp-validation-for="Login" class="form-error-message"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-md-3 col-md-text-right col-form-label"></label>
        <div class="col-md-4">
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="form-error-message"></span>
        </div>
    </div>
    <div class="form-group row">
        <span class="col-md-3"></span>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        </div>
    </div>
</form>