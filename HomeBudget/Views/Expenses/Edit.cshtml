@model HomeBudget.ViewModels.Expenses.EditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edytuj wydatek</h2>
<hr />

<div class="row">
    <div class="col-lg-12">
        <div asp-validation-summary="ModelOnly" class="form-error-message"></div>
        <form asp-controller="Expenses" asp-action="Edit" method="post">
            <div class="form-group row">
                <label asp-for="Date" class="col-md-4 col-form-label col-md-text-right"></label>
                <div class="col-md-8">
                    <input asp-for="Date" class="form-control" type="date">
                    <span asp-validation-for="Date" class="form-error-message"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="col-md-4 col-form-label col-md-text-right"></label>
                <div class="col-md-8">
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="form-error-message"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryId" class="col-md-4 col-form-label col-md-text-right"></label>
                <div class="col-md-8">
                    <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control" data-live-search="true">
                        <option value="0" disabled selected>--- Wybierz ---</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="form-error-message"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="TotalPrice" class="col-md-4 col-form-label col-md-text-right"></label>
                <div class="col-md-7">
                    <input asp-for="TotalPrice" class="form-control">
                    <span asp-validation-for="TotalPrice" class="form-error-message"></span>
                </div>
                <div class="col-md-1 col-form-label">
                    <span>zł</span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-md-4 col-form-label col-md-text-right"></label>
                <div class="col-md-5">
                    <input asp-for="Quantity" class="form-control">
                    <span asp-validation-for="Quantity" class="form-error-message"></span>
                </div>
                <div class="col-md-3">
                    <select asp-for="UnitId" asp-items="@Model.Units" class="custom-select"></select>
                </div>
            </div>
            <div class="form-group row">
                <span class="col-md-4"></span>
                <div class="col-md-8">
                    <button type="submit" class="btn btn-primary">Edytuj</button>
                </div>
            </div>
        </form>
    </div>
</div>